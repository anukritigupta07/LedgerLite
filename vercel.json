{
  "version": 2,
  "builds": [
    {
      "src": "Backend/dist/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["Backend/dist/**"] }
    },
    {
      "src": "client/index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Backend/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/index.html"
    }
  ]
}
